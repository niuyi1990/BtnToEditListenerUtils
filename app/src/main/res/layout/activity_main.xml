<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scl"
        android:background="@color/base_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_40"
            android:paddingBottom="@dimen/dp_40"
            >

            <TextView
                android:id="@+id/tv_phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textSize="16sp"
                android:textColor="@color/base_text"
                />

            <EditText
                android:id="@+id/edit_phone"
                android:background="@null"
                android:layout_alignBaseline="@+id/tv_phone_txt"
                android:layout_toRightOf="@+id/tv_phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:hint="请输入手机号码"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp"
                android:inputType="phone"
                />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_alignBottom="@+id/tv_phone_txt"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_input_delete"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

            <View
                android:id="@+id/v_h_phone"
                android:layout_below="@+id/tv_phone_txt"
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_verification_txt"
                android:layout_below="@+id/v_h_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="验证码"
                android:textSize="16sp"
                android:textColor="@color/base_text"
                />

            <EditText
                android:id="@+id/edit_verification"
                android:background="@null"
                android:layout_alignBaseline="@+id/tv_verification_txt"
                android:layout_alignLeft="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_100"
                android:hint="请输入验证码"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp"
                android:inputType="textPassword"
                />



            <View
                android:id="@+id/v_h_verification"
                android:layout_below="@+id/tv_verification_txt"
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_pwd_txt"
                android:layout_below="@+id/v_h_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="密码"
                android:textSize="16sp"
                android:textColor="@color/base_text"
                />

            <EditText
                android:id="@+id/edit_pwd"
                android:background="@null"
                android:layout_alignBaseline="@+id/tv_pwd_txt"
                android:layout_alignLeft="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入6-18位数字，字母或字符"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp"
                android:inputType="textPassword"
                />

            <View
                android:id="@+id/v_h_pwd"
                android:layout_below="@+id/tv_pwd_txt"
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_pwd_txt1"
                android:layout_below="@+id/v_h_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="密码"
                android:textSize="16sp"
                android:textColor="@color/base_text"
                />

            <EditText
                android:id="@+id/edit_pwd1"
                android:background="@null"
                android:layout_alignBaseline="@+id/tv_pwd_txt1"
                android:layout_alignLeft="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入6-18位数字，字母或字符"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp"
                android:inputType="textPassword"
                />

            <View
                android:id="@+id/v_h_pwd1"
                android:layout_below="@+id/tv_pwd_txt1"
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/tv_pwd_txt2"
                android:layout_below="@+id/v_h_pwd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="密码"
                android:textSize="16sp"
                android:textColor="@color/base_text"
                />

            <EditText
                android:id="@+id/edit_pwd2"
                android:background="@null"
                android:layout_alignBaseline="@+id/tv_pwd_txt2"
                android:layout_alignLeft="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入6-18位数字，字母或字符"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp"
                android:inputType="textPassword"
                />

            <View
                android:id="@+id/v_h_pwd2"
                android:layout_below="@+id/tv_pwd_txt2"
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btn_register"
                android:layout_below="@+id/v_h_pwd2"
                android:background="@drawable/gray_btn_round_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="注册"
                android:textSize="16sp"
                android:textColor="@color/white_text"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
